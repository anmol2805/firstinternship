<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tophawks.vm.visualmerchandising.Modules.StockManagement.StoreImageReport">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll1">

            <ImageView
                android:id="@+id/store_image_1_iv"
                android:layout_width="0dp"
                android:layout_height="200sp"
                android:layout_margin="5sp"
                android:src="@drawable/add_store_image"
                android:layout_weight="1"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="200sp"
                android:src="@drawable/add_store_image"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:id="@+id/store_image_2_iv"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll2"
            android:layout_below="@id/ll1">

            <ImageView
                android:id="@+id/store_image_3_iv"
                android:layout_width="0dp"
                android:layout_height="200sp"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:src="@drawable/add_store_image" />

            <ImageView
                android:layout_width="0dp"
                android:src="@drawable/add_store_image"
                android:layout_margin="5sp"
                android:layout_height="200sp"
                android:layout_weight="1"
                android:id="@+id/store_image_4_iv"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:id="@+id/ll4"
            android:layout_below="@id/ll2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".75"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:text="Store ID"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:text="Store Name"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <!--<TextView-->
                <!--android:id="@+id/textView3"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:paddingLeft="5dp"-->
                <!--android:paddingTop="15dp"-->
                <!--android:text="Owner Name"-->
                <!--android:textColor="@android:color/black"-->
                <!--android:textSize="20sp" />-->



            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.25"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/store_id_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:text="Store ID"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/store_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:text="Store Name"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <!--<TextView-->
                <!--android:id="@+id/store_owner_name_tv"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:paddingLeft="5dp"-->
                <!--android:paddingTop="15dp"-->
                <!--android:text="Owner Name"-->
                <!--android:textColor="@android:color/black"-->
                <!--android:textSize="20sp" />-->




            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/generate_image_report_ll"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/ll4"
            android:background="@drawable/roundrect">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/scrollLayout1"
                android:gravity="center"
                android:text="GENERATE STORE IMAGE REPORT"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>