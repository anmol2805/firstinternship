<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".75"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".59"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:text="Store Name"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".59"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:text="Owner Name"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".59"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:text="Email ID:"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".59"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:text="Contact No."
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".59"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:text="Shop Address"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".59"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:text="Capacity"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".59"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:text="Channel  "
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".59"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:text="Classification"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".59"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:text="Category  "
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".59"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:text="City"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".59"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:text="State"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.25"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/store_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter store name"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/store_owner_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter Owners Name"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/store_email_id_et"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter Emal ID"
                    android:inputType="textEmailAddress" />


                <EditText
                    android:id="@+id/store_contact_number_et"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter Contact Number"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/store_shop_Address_et"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter Shop Address"
                    android:inputType="textPostalAddress" />

                <EditText
                    android:id="@+id/store_capacity_et"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter Capacity"
                    android:inputType="numberDecimal" />

                <Spinner
                    android:id="@+id/store_channel_s"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ems="10"

                    android:inputType="text" />

                <Spinner
                    android:id="@+id/store_classification_s"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ems="10"

                    android:inputType="text" />

                <Spinner
                    android:id="@+id/store_category_s"
                android:layout_width="match_parent"
                    android:layout_height="0dp"
                android:layout_weight="1"
                android:ems="10"

                android:inputType="text" />

                <EditText
                    android:id="@+id/store_city_et"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter City"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/store_state_et"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter State"
                    android:inputType="text" />


            </LinearLayout>

        </LinearLayout>


</ScrollView>
