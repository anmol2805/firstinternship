<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"

    tools:context="com.tophawks.vm.visualmerchandising.Activities.MainHomeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/menu5_edited"
        android:alpha="0.9"

        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView34"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:id="@+id/relativeLayout2">

                <Button
                    android:id="@+id/attendancebutton"
                    android:layout_width="75dp"
                    android:layout_height="75dp"

                    android:background="@drawable/att1" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/attendancebutton"
                    android:layout_alignStart="@+id/attendancebutton"
                    android:layout_marginLeft="5dp"
                    android:text="Attendance"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView17"

                    android:text="Management"
                    android:textColor="#fff" />


                <RelativeLayout
                    android:id="@+id/trainpro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="100dp"
                    android:layout_marginStart="100dp"

                    android:layout_toEndOf="@+id/attendancebutton"
                    android:layout_toRightOf="@+id/attendancebutton">


                    <Button
                        android:id="@+id/train"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/training" />

                    <TextView
                        android:id="@+id/textView35"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/train"
                        android:layout_below="@+id/train"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:text="Training"
                        android:textColor="#fff"

                        />


                </RelativeLayout>


            </RelativeLayout>

            <Button
                android:id="@+id/vmbutton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/vm2" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vmbutton"
                android:layout_centerHorizontal="true"

                android:text="Visual Merchandising"
                android:textColor="#fff" />

            <RelativeLayout
                android:id="@+id/stocksales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_above="@+id/vmbutton"
                android:layout_alignStart="@+id/relativeLayout2"
                android:layout_marginBottom="50dp">

                <Button
                    android:id="@+id/salesbutton"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_alignParentStart="true"


                    android:background="@drawable/sales5"

                    />

                <Button
                    android:id="@+id/stockbutton"
                    android:layout_width="75dp"
                    android:layout_height="75dp"


                    android:layout_marginLeft="100dp"
                    android:layout_marginStart="100dp"
                    android:layout_toEndOf="@+id/salesbutton"

                    android:layout_toRightOf="@+id/salesbutton"
                    android:background="@drawable/stock2" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/salesbutton"
                    android:layout_below="@+id/salesbutton"
                    android:layout_marginStart="20dp"
                    android:text="Sales"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/salesbutton"
                    android:layout_below="@+id/textView24"
                    android:text="Management"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/stockbutton"
                    android:layout_below="@+id/stockbutton"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Stock"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/stockbutton"
                    android:layout_below="@+id/textView29"
                    android:text="Management"
                    android:textColor="#fff" />


            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>