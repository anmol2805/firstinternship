<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tophawks.vm.visualmerchandising.Modules.VisualMerchandising.AddProduct">

    <include layout="@layout/app_bar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".95"
            android:layout_marginTop="10sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/scrollll">
                <include layout="@layout/product_details" />
        </LinearLayout>


        <TextView
            android:id="@+id/add_product_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scrollll"
            android:textStyle="bold"
            android:layout_gravity="bottom"
            android:background="@drawable/roundrect"
            android:gravity="center"
            android:text="ADD PRODUCT"
            android:layout_weight="0.5"
            android:layout_margin="2sp"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />

    </LinearLayout>



</LinearLayout>
